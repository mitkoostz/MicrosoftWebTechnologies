@model ICollection<MunicipalityStaraZagora.Models.NewsItemViewModel>
@{
    ViewData["Title"] = "Новини";
}

<div class="container">
    <h2 class="mt-2">Новините на Стара Загора</h2>
    <div class="row mt-3">
        @foreach (var item in Model)
        {
            <div class="col-md-6">
                <div class="card flex-md-row mb-4 box-shadow h-md-250">
                    <div class="card-body d-flex flex-column align-items-start">
                        <strong class="d-inline-block mb-2 text-primary">@item.CityName</strong>
                        <h4 class="mb-0">
                            <a class="text-dark" href="#">@item.Name</a>
                        </h4>
                        <div class="mb-1 text-muted">@item.Date</div>
                        <p class="card-text mb-auto">@item.Description</p>
                        <a href="@item.ForwardLink">Продължи четенето</a>
                    </div>
                    <img class="card-img-right img-thumbnail flex-auto d-none d-md-block" 
                         data-src="holder.js/200x250?theme=thumb" 
                         alt="Thumbnail [200x250]" 
                         style="width: 230px; height: 230px;"
                         src="@item.Image"
                         data-holder-rendered="true">
                </div>
            </div>
        }
    </div>
</div>

